<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#3D9AD3"
    >
    <ImageView
        android:id="@+id/iv"
        android:src="@mipmap/heima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="5%"
        app:layout_marginBottomPercent="5%"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/_1080"
        android:layout_toEndOf="@id/iv"
        android:layout_alignTop="@id/iv"
        android:textSize="18sp"
        app:layout_marginLeftPercent="5%"
        android:textColor="@color/white"
        />
    <com.example.crxc.a360safe.view.MarqueeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_marquee"
        android:text="@string/header_welcomes"
        android:layout_toEndOf="@id/iv"
        app:layout_marginLeftPercent="5%"
        android:layout_alignBottom="@id/iv"
        app:layout_marginBottomPercent="2%"
        android:textColor="#bfff"
        android:textStyle="italic"
        />
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting"
        android:background="@drawable/iv_setting_selector"
        android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="3%"
        android:clickable="true"
        />
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv"-->
        <!--app:layout_marginTopPercent="5%"-->
        <!--android:layout_below="@id/iv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white"-->
        <!--/>-->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_below="@id/iv"
        android:background="@color/white"
        >
    </GridLayout>
</android.support.percent.PercentRelativeLayout>